<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>@ViewBag.Titel</title>
    <!-- Simple bar CSS -->
    <link rel="stylesheet" href="~/css/simplebar.css">
    <!-- Fonts CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/css/feather.css">
    <!-- Date Range Picker CSS -->
    <link rel="stylesheet" href="~/css/select2.css">

    <link rel="stylesheet" href="~/css/daterangepicker.css">
    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/app-light.css" id="lightTheme">
    <link rel="stylesheet" href="~/css/bubble.css" />
<script src="~/jquery/jquery.min.js"></script>
</head>

<body class="vertical light rtl">
    <div class="wrapper">

        <aside class="sidebar-left border-right bg-white shadow" id="leftSidebar" data-simplebar>

            <nav class="vertnav navbar navbar-light">
                <!-- nav bar -->
                <div class="w-100 mb-4 d-flex">
                    <a class="navbar-brand mx-auto mt-2 flex-fill text-center" asp-controller="User" asp-action="Main">
                        <img src="~/assets/images/Mo3aqin-small.png" height="70" alt="">
                    </a>
                </div>
                <ul class="navbar-nav flex-fill w-100 mb-2">
                    <li class="nav-item w-100">
                        <a class="nav-link" asp-controller="User" asp-action="Main">
                            <i class="fe fe-home fe-16"></i>
                            <span class="ml-3 item-text">الرئيسية</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#dashboard" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">
                           
                            <span class="ml-3 item-text">بيانات اساسية</span><span class="sr-only">(current)</span>
                        </a>
                        <ul class="collapse list-unstyled pl-4 w-100" id="dashboard">
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Coach" asp-action="Nationality"><span class="ml-1 item-text">الجنسيات</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Player" asp-action="Country"><span class="ml-1 item-text">البلاد</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Game" asp-action="Race"><span class="ml-1 item-text">سباقات</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Game" asp-action="Competition"><span class="ml-1 item-text">المنافسات</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Game" asp-action="Class"><span class="ml-1 item-text">الفئات</span></a>
                            </li>

                        </ul>
                    </li>
                </ul>

                <ul class="navbar-nav flex-fill w-100 mb-2">

                    <li class="nav-item w-100">
                        <a class="nav-link" asp-controller="Game" asp-action="Index">
                            <span class="ml-3 item-text">الالعاب</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#Coach" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">

                            <span class="ml-3 item-text">ادارة المدربين</span><span class="sr-only">(current)</span>
                        </a>
                        <ul class="collapse list-unstyled pl-4 w-100" id="Coach">
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Coach" asp-action="Index"><span class="ml-1 item-text"> المدربين</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Coach" asp-action="CoachDecision"><span class="ml-1 item-text">قرارات ومرفقات المدربين</span></a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#Empolyee" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">

                            <span class="ml-3 item-text">ادارة الموظفين</span><span class="sr-only">(current)</span>
                        </a>
                        <ul class="collapse list-unstyled pl-4 w-100" id="Empolyee">
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Empolyee" asp-action="Index"><span class="ml-1 item-text"> الموظفين</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Empolyee" asp-action="EmployeeDecision"><span class="ml-1 item-text">قرارات ومرفقات الموظفين</span></a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#Player" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle nav-link">

                            <span class="ml-3 item-text">ادارة الاعبين</span><span class="sr-only">(current)</span>
                        </a>
                        <ul class="collapse list-unstyled pl-4 w-100" id="Player">
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Player" asp-action="Index"><span class="ml-1 item-text">  الاعبين</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Player" asp-action="PlayerDecision"><span class="ml-1 item-text">قرارات ومرفقات الاعبين</span></a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link pl-3" asp-controller="Player" asp-action="PlayerHistory"><span class="ml-1 item-text">تاريخ الاعبين</span></a>
                            </li>
                        </ul>
                    </li>
                   
                    <li class="nav-item w-100">
                        <a class="nav-link" asp-controller="Championship" asp-action="Index">
                            <span class="ml-3 item-text">بطولات</span>
                        </a>
                    </li>
                    @*<li class="nav-item w-100">
            <a class="nav-link" href="">
                <i class="fe fe-help-circle fe-16"></i>
                <span class="ml-3 item-text">الرئيسية</span>
            </a>
        </li>*@
                </ul>

            </nav>
        </aside>
        <main role="main" class="main-content">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12 text-center">
                        <img src="~/assets/images/Mo3aqin.jpg" height="250" alt="">
                    </div>
                    <div class="card col-lg-10 mx-auto my-3">
                        <div class="card-body">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- content -->
                   
                </div> <!-- .row -->
            </div> <!-- .container-fluid -->
        </main> <!-- main -->
       
        <!-- ============ -->
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/popper.min.js"></script>
        <script src="~/js/moment.min.js"></script>
        <script src="~/js/bootstrap.min.js"></script>
        <script src="~/js/simplebar.min.js"></script>
        <script src='~/js/daterangepicker.js'></script>
        <script src='~/js/select2.min.js'></script>

        <script src='~/js/jquery.stickOnScroll.js'></script>
        <script src='~/js/jquery.timepicker.js'></script>
        <script src="~/js/tinycolor-min.js"></script>
        <script src="~/js/config.js"></script>
        <script src="~/js/apps.js"></script>
        <script src="~/bootbox.js/bootbox.min.js"></script>
        <script src="~/sweetalert/sweetalert.min.js"></script>
        <script defer>
    $('.drgpicker').daterangepicker({
                singleDatePicker: true,
                timePicker: false,
                showDropdowns: true,
                locale: {
                    format: 'DD/MM/YYYY'
                }
            });
            $('.select2').select2({
                theme: 'bootstrap4',
            });
            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }
            gtag('js', new Date());
            gtag('config', 'UA-56159088-1');</script>
        @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
