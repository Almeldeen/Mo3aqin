                <option value="opt-two-eight">بوشيا</option>
                <option value="opt-two-nine">كرة الهدف</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="select-three"> الفئة</label>
            <select class="form-control select2" id="select-three">
                <option value="opt-three-one">F1</option>
                <option value="opt-three-two">F2</option>
                <option value="opt-three-three">F3</option>
                <option value="opt-three-four">F4</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="text-fifteen">الإعاقة</label>
            <input type="text" id="text-fifteen" class="form-control">
        </div>
    </div>
    <hr class="my-2">
    <div class="form-group">
        <label class="" for="check-one"> اللعبة </label>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-one">
            <label class="custom-control-label" for="check-one-one"> السباحة</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-two">
            <label class="custom-control-label" for="check-one-two"> كرة السلة</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-three">
            <label class="custom-control-label" for="check-one-three"> البوشيا</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-four">
            <label class="custom-control-label" for="check-one-four"> كرة الهدف</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-five">
            <label class="custom-control-label" for="check-one-five"> تنس الطاولة</label>
        </div>
        <div class="custom-control custom-checkbox">
            <input class="custom-control-input" type="checkbox" value="" id="check-one-six">
            <label class="custom-control-label" for="check-one-six"> العاب قوى</label>
        </div>
    </div>
    <hr class="my-2">
    <div class="form-group">
        <label class="" for="text-sixteen"> ملاحظات </label>
        <textarea name="" class="form-control" id="text-sixteen" cols="30" rows="5"></textarea>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">تسجيل اللاعب</button>
    <p class="mt-5 mb-3 text-muted text-center">© 2021</p>
