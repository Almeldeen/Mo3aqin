
@{
    ViewBag.Titel = "الالعاب";
}

<form class="col-md-8 mx-auto">
    <div class="form-row justify-content-center">
        @foreach (var item in ViewBag.Game)
        {
            <div class="col-md-6 mb-2">

                <a class="btn btn-lg btn-primary w-100" asp-action="GameDetails" asp-route-Gameid="@item.GameId">@item.GameName</a>
            </div>
        }



    </div>
    <hr />

    <div class="form-row">
        <div class="col-md-6 mb-2">

            <a class="btn btn-lg btn-success w-100" asp-action="NewGame">تسجيل لعبة جديدة</a>
        </div>
        <div class="col-md-6 mb-2">

        <a class="btn btn-lg btn-dark w-100" asp-action="Class" >تسجيل الفئات</a>
        </div>

    </div>
    <p class="mt-5 mb-3 text-muted text-center">© 2021</p>
</form>

