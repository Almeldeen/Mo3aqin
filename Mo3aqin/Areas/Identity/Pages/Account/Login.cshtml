                    <label asp-for="Input.Email" class="sr-only">إسم المستخدم</label>
                    <input asp-for="Input.Email" type="text" id="inputEmail" class="form-control form-control-lg" placeholder="إسم المستخدم" required="" autofocus="">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
