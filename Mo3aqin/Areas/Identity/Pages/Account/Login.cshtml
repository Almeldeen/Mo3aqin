                    <label  asp-for="Input.Password" class="sr-only">كلمة المرور</label>
                    <input asp-for="Input.Password" type="password" id="inputPassword" class="form-control form-control-lg" placeholder="كلمة المرور" required="">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

